bighash_files = $(notdir $(wildcard $(OF_AGENT_BASE_DIR)/submodules/bigcode/modules/BigData/BigHash/module/src/*.c))

searchdirs = $(realpath $(OF_AGENT_BASE_DIR)/submodules/bigcode/modules/BigData/BigHash/module/src):$(realpath $(OF_AGENT_BASE_DIR)/submodules/bigcode/modules/BigData/BigHash/module/inc):$(realpath $(OF_AGENT_BASE_DIR)/submodules/infra/modules/AIM/module/inc)

vpath %.c $(searchdirs)

export CPATH += $(searchdirs)

.PHONY: all

all: $(bighash_files:.c=.o)
#ifneq ($(dmode),)
#	@echo prereqs = $+
#endif

#
# This rule builds the dependency files
#
%.d: %.c
	@set -e; $(RM) -f $@; \
	$(CC) -MM $(CFLAGS) $< > $@.$$$$; \
	$(SED) 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	$(RM) -f $@.$$$$

-include $(bighash_files:.c=.d)

